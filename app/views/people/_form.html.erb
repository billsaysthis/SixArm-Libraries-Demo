<% if error_messages_for form %>
<%= render "shared/error_messages", :target => form %>
<% end %>
<div class="field">
	<div class='label'><%= form.label :first_name %></div>
	<div class='input'><%= form.text_field :first_name %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :middle_name %></div>
	<div class='input'><%= form.text_field :middle_name %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :last_name %></div>
	<div class='input'><%= form.text_field :last_name %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :phone %></div>
	<div class='input'><%= form.text_field :phone %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :salary %></div>
	<div class='input'><%= form.text_field :salary %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :favorite_color %></div>
	<div class='input'><%= form.select :favorite_color, Colorful.colors, {:include_blank => true} %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :department_id %></div>
	<div class='input'><%= form.select :department_id, options_from_collection_for_select(@person.company.departments, 'id', 'name', @person.department_id) %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :company_id %></div>
	<div class='input'><%= form.select :company_id, Company.all.collect {|p| [ p.name, p.id ] } %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :title_id %></div>
	<div class='input'><%= form.select :title_id, Title.all.collect {|p| [ p.title, p.id ] } %></div>
</div>
<div class="field">
	<div class='label'><%= form.label :hired_on, 'Hired' %></div>
	<div class='input'><%= form.datetime_select :hired_on %></div>
</div>
<% if !@person.new_record? %>
<div class="field">
	<div class='label'><%= form.label :terminated_on, 'Terminated' %></div>
	<div class='input'><%= form.datetime_select :terminated_on, :start_year => @person.company.incorporation_year.to_i, :include_blank => true %></div>
</div>
<% end %>
<div class="actions clearer">
	<%= form.submit %> <%= link_to 'Cancel', companies_path, :class => 'canceler' %>
</div>
